input CreatePostRequest {
    userId: ID!
    title: String!
    content: String!
}

type Post {
    id: ID
    title: String
    content: String
    createdAt: String
    updatedAt: String
    user: User
    comments: [Comment]
    tags: [Tag]
}

extend type Query {
    allPosts: [Post]
    postById(id: ID!): Post
}

extend type Mutation {
    createPost(input: CreatePostRequest!): Post
    updatePost(id: ID!, input: CreatePostRequest!): Post
    deletePost(id: ID!): Boolean
}
